<?xml version='1.0' encoding='UTF-8'?>
<faces-config version="2.2"
              xmlns="http://xmlns.jcp.org/xml/ns/javaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd">
    <application>
        <!-- Ressource bundle utilisÃ©e pour l'internationalisation de l'application. -->
        <resource-bundle>
            <base-name>
                ch.hearc.ig.odi.moviemanager.presentation.bundle.Messages
            </base-name>
            <var>bundle</var>
        </resource-bundle>
        <locale-config>
            <default-locale>fr</default-locale>
            <supported-locale>en</supported-locale>
        </locale-config>
    </application>
    
    <!-- Mise en place de la navigation au sein de l'application -->
    <navigation-rule>
        <from-view-id>/index.xhtml</from-view-id>
        <navigation-case>
            <from-action>#{personDetailBean.getPersonToDetail(person)}</from-action>
            <from-outcome>success</from-outcome>
            <to-view-id>/personDetail.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-action>#{personDetailBean.getPersonToDetail(person)}</from-action>
            <from-outcome>failure</from-outcome>
            <to-view-id>/index.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-action>#{movieDetailBean.getMovieToDetail(movie)}</from-action>
            <from-outcome>success</from-outcome>
            <to-view-id>/movieDetail.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-action>#{movieDetailBean.getMovieToDetail(movie)}</from-action>
            <from-outcome>failure</from-outcome>
            <to-view-id>/index.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    
    <navigation-rule>
        <from-view-id>/personDetail.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>returnHome</from-outcome>
            <to-view-id>/index.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-action>#{movieDetailBean.getMovieToDetail(movie)}</from-action>
            <from-outcome>success</from-outcome>
            <to-view-id>/movieDetail.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-action>#{movieDetailBean.getMovieToDetail(movie)}</from-action>
            <from-outcome>failure</from-outcome>
            <to-view-id>/personDetail.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    
    <navigation-rule>
        <from-view-id>/movieDetail.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>returnHome</from-outcome>
            <to-view-id>/index.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-action>#{personDetailBean.getPersonToDetail(person)}</from-action>
            <from-outcome>success</from-outcome>
            <to-view-id>/personDetail.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-action>#{personDetailBean.getPersonToDetail(person)}</from-action>
            <from-outcome>failure</from-outcome>
            <to-view-id>/movieDetail.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
</faces-config>
